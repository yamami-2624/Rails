<!-- マイページ　自分の投稿したものだけを表示 -->

<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
    	<%= render "users/profile", user: @curent_user %>
        <%= render 'books/new', book: @book %>
      </div>
       <div class="col-lg-9">
<table class="table table-striped">
	<h1>Books</h1>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Introduction</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
      	<td><%= attachment_image_tag user, :profile_image, :fill, 15, 15, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
</div>
</div>
</div>
<br>