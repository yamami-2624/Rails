<h1>New Book</h1>

<%= form_for(book) do |f| %>

  <div class="field">
    <%= f.label :title %></br>
    <%= f.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %></br>
    <%= f.text_area :body, id: :book_body %>
  </div>

  <div class="creste">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
