<table class="table table-striped">
<h1>User info</h1>
<div class="profile-container">
  <thead>
    <tr>
      <div class="profile-container">
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
      </div>
    </tr>

    <tr>
      <th>name</th>
      <th><div class="profile-name"><%= current_user.name %></div></th>
    </tr></div>

    <tr>
      <th>introduce</th>
      <th><div class="profile-introduction"><%= current_user.introduction %></div></th>
    </tr>

    <div>
  <!--   <button type="button" class="btn btn-primary btn-block"> -->
      <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-primary btn-block" %>
  </div>

  </thead>
</div>
</table>




